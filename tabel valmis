table#data { width:580px; font-family: sans-serif; border: 5px solid black;}
table#data td,th {border: 1px solid black; }

table#data td[colspan="2"]{background: aqua; }

table#data td[rowspan="2"]{background: lime; }
table#data td[rowspan="1"]{background: aqua; }
