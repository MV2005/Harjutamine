    <tr><th><th>Column 1<th>Column 2<th>Column 3</tr>
    
    <tr><th>Row 1 <td colspan="1">Cell 1.1<td>Cell 1.2<td>Cell 1.3</td></tr>
    
     <tr><th>Row 2 <td colspan="1">Cell 2.1<td><td>Cell 2.3</td></tr>
         
     <tr><th>Row 3 <td colspan="2">Cell 3.1<td>Cell 3.2</tr>
    
      <tr><th colspan="4">Next section</th></tr>

    
    <tr><th>Row 4 <td rowspan="1">Cell 4.1<td rowspan="1">Cell 4.2<td rowspan="1">Cell 4.3</td></tr>
    
    
     <tr><th>Row 5 <td colspan="1">Cell 5.1<td rowspan="2" colspan="2">Cell 5.2</tr>
    
    <tr><th>Row 6 <td colspan="1">Cell 6.1</tr>
      
   
     <tr><td colspan="4">Footer information</tr>
    


    
    
